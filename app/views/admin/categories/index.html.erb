#note, I am just using the products  classes to style instead of duplicating or creating a new stylesheet
<section ckass="admin-products-index>"
  <header>
  <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
    </div>
  </div>

  <div class="panel panel-default products">
    <table>
      <thead>
        <tr>
        <th colspan="1">Category</th>
        </tr>
      </thead>
      <tbody>
        <#%= render @categories %>
      </tbody>
    </table>
  </div>

</section>